{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 4,
        "minor": 0,
        "patch": 0
    },
    "include": [
        "VersionPresets.json"
    ],
    "configurePresets": [
        {
            "inherits": ["versions"],
            "hidden": true,
            "name": "cpm",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "FETCHCONTENT_UPDATES_DISCONNECTED": "ON",
                "FETCHCONTENT_BASE_DIR": "${sourceDir}/_deps"
            }
        },
        {
            "hidden": true,
            "name": "debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE":"Debug"
            },
            "inherits":[
                "cpm"
            ]
        },
        {
            "hidden": true,
            "name": "release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            },
            "inherits":[
                "cpm"
            ]
        },
        {
            "$comment": "****************************** host compiler MSVC 19",
            "hidden": true,
            "name": "msvc19",
            "generator": "Visual Studio 15 2017",
            "architecture": {
                "strategy": "set",
                "value": "Win32"
            }
        },
        {
            "$comment": "****************************** host compiler",
            "hidden": true,
            "name": "hostcc",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_C_FLAGS": "-m32",
                "CMAKE_CXX_FLAGS": "-m32"
            }
        },
        {
            "$comment": "****************************** cross compiler gcc on docker",
            "hidden": true,
            "name": "gnuarm14.3",
            "generator": "Ninja",
            "environment": {
                "COMPILER_ROOT_PATH": "/home/kdev/gnuarm14.3"
            },
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/_deps/cmake_scripts-src/toolchains/arm_none_eabi_gcc.cmake"
            }
        },
        {
            "$comment": "****************************** cross compiler atfe on docker",
            "hidden": true,
            "name": "atfe21.1",
            "generator": "Ninja",
            "environment": {
                "COMPILER_ROOT_PATH": "/home/kdev/atfe21.1"
            },
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/_deps/cmake_scripts-src/toolchains/llvm_clang_arm.cmake"
            }
        },
        {
            "hidden": true,
            "name": "mcu",
            "environment": {
                "CORTEX_TYPE": "CM4F"
            },
            "cacheVariables": {
                "STM32_TYPE": "f4",
                "STM32_DEVICE": "STM32F429xx"
            }
        },
        {
            "hidden": true,
            "name": "unity",
            "cacheVariables": {
                "UNITY_TEST_FRAMEWORK": true
            }
        },
        {
            "hidden": true,
            "name": "bl-firmware",
            "cacheVariables": {
                "FIRMWARE_NAME": "CPU_BL"
            }
        }
    ]
}
